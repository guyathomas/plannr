
import {
  {{#if wantEpic}}
  get{{ properCase defaultAction }},
  {{/if}}
  defaultAction
} from '../actions';
import {
  {{#if wantEpic}}
  {{upperCase defaultAction}}_GET,
  {{/if}}
  DEFAULT_ACTION
} from '../constants';

describe('{{ properCase name }} actions', () => {
  describe('Default Action', () => {
    {{#if wantEpic}}
    it('has a type of {{upperCase defaultAction}}_GET', () => {
      const expected = {
        type: {{upperCase defaultAction}}_GET,
      };
      expect(get{{ properCase defaultAction }}()).toEqual(expected);
    });
    {{/if}}
    it('has a type of DEFAULT_ACTION', () => {
      const expected = {
        type: DEFAULT_ACTION,
      };
      expect(defaultAction()).toEqual(expected);
    });
  });
});
